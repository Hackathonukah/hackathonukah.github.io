!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "The Middleman"
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    %header.navigation{role: "banner"}
      .navigation-wrapper
        %a.logo{href: "javascript:void(0)"}
          %img{src: "/assets/images/logo.png", alt: "Hackathonukah"}
        %a.navigation-menu-button#js-mobile-menu{href: "javascript:void(0)"} Menu
        %nav{role: "navigation"}
          %ul.navigation-menu.show#js-navigation-menu
            %li.nav-link
              %a{href: "#about"} About
              %a{href: "#events"} Events
              %a{href: "#contact"} Contact Us
    = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
    = google_analytics_tag
